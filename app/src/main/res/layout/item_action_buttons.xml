<!-- app/src/main/res/layout/item_action_buttons.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- 点赞 -->
    <LinearLayout
        android:id="@+id/action_like_container"
        style="@style/ActionButtonContainer">
        <ImageView
            android:id="@+id/action_like_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_action_like"/>
        <TextView
            android:id="@+id/action_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            tools:text="124"/>
    </LinearLayout>

    <!-- 收藏 -->
    <LinearLayout
        android:id="@+id/action_favorite_container"
        style="@style/ActionButtonContainer">
        <ImageView
            android:id="@+id/action_favorite_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_action_favorite"/>
        <TextView
            android:id="@+id/action_favorite_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:text="收藏"/>
    </LinearLayout>

    <!-- 分享 -->
    <LinearLayout
        android:id="@+id/action_share_container"
        style="@style/ActionButtonContainer">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_action_share"/>
        <TextView
            android:id="@+id/action_share_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:text="分享"/>
    </LinearLayout>

</LinearLayout>